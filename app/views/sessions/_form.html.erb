<div class="info">

    <h1 class="display-4 font-weight-bold">Fit Dish</h1>
    <h4 class="mb-3 display-5 font-weight-light">Your Healthy Eating Companion </h4>
    <img id="mainEmoji" class="d-block mx-auto my-2" src="FitDish.png">
    <h2 class="my-3 font-weight-bold">Please Log In</h2>

      <%= form_tag(login_path) do %>
        <div class="form-group">
          <%= label_tag "Email" %><br>
          <%= text_field_tag "email", nil, placeholder: "Email", class: "form-control-lg" %><br>
        </div>
        <div class="form-group">
        <%= label_tag "Password" %><br>
        <%= password_field_tag "password", nil, placeholder: "Password", class: "form-control-lg" %><br><br>
        </div>
        <%= submit_tag "Log In", class: "btn btn-primary btn-lg" %>
      <% end %>


</div>
